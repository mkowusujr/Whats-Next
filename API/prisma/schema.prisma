datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model media {
  id                Int        @id @default(autoincrement())
  title             String
  subTitle          String?
  storage           String?
  duration          String?
  releaseDate       DateTime?
  imgLink           String?
  creator           String?
  summary           String?
  mediaLink         String?
  isDeleted         Boolean    @default(false)
  seriesId          Int?
  series            series?    @relation(fields: [seriesId], references: [id])
  mediaTypeId       Int
  mediaType         mediaType  @relation(fields: [mediaTypeId], references: [id])
  notes             note[]
  currentProgressId Int?       @unique
  currentProgress   progress?  @relation("currentProgress", fields: [currentProgressId], references: [id])
  progressList      progress[]
  catagories        catagory[]
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
}

model series {
  id        Int      @id @default(autoincrement())
  title     String   @unique
  media     media[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isDeleted Boolean  @default(false)
}

model mediaType {
  id        Int      @id @default(autoincrement())
  mediaType String   @unique
  media     media[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isDeleted Boolean  @default(false)
}

model catagory {
  id        Int      @id @default(autoincrement())
  category  String   @unique
  media     media[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isDeleted Boolean  @default(false)
}

model note {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  mediaID   Int
  media     media    @relation(fields: [mediaID], references: [id], onDelete: NoAction, onUpdate: NoAction)
  isDeleted Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model progress {
  id            Int       @id @default(autoincrement())
  title         String?
  status        String?
  score         Int?
  current       Int?
  total         Int?
  unit          String?
  dateStarted   DateTime?
  dateCompleted DateTime?
  mediaID       Int
  media         media     @relation(fields: [mediaID], references: [id], onDelete: Cascade, onUpdate: Cascade)
  mediaCurrent  media?    @relation("currentProgress")
  isDeleted     Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}
